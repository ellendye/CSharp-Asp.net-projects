@{
    ViewData["Title"] = "Home Page";
}

<div class="p-4">
    <div class="d-flex justify-content-between p-2">
        <p>Fullness: @ViewBag.Fullness</p>
        <p>Happiness: @ViewBag.Happiness</p>
        <p>Meals: @ViewBag.Meals</p>
        <p>Energy: @ViewBag.Energy</p>
    </div>
    <div class="border border-secondary box d-flex flex-column align-items-center justify-content-between text-center">
        <img src=@ViewBag.imgURL alt="DojoDachi image" width="300" height="300">
        <p class="display-4">@ViewBag.Text</p>
    </div>
    <div class="d-flex align-items-center justify-content-around m-1 p-2">
        @{
            if(ViewBag.Game == "no")
            {
                <a href="/feed" class="btn btn-dark">Feed</a>
                <a href="/play" class="btn btn-dark">Play</a>
                <a href="/work" class="btn btn-dark">Work</a>
                <a href="/sleep" class="btn btn-dark">Sleep</a>
            }
            else
            {
                <a href="/restart" class="btn btn-dark">Restart</a>
            }
        }
    </div>
</div>
